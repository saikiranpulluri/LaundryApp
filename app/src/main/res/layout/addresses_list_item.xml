<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout11"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/relativeLayout11"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/gray"
        android:padding="7dp">

        <TextView
            android:id="@+id/txtAddressName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="New Text" />

        <TextView
            android:id="@+id/txtAddressOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtAddressName"
            android:text="New Text" />

        <TextView
            android:id="@+id/txtAdressDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtAddressOwner"
            android:layout_alignRight="@+id/txtAddressOwner"
            android:layout_below="@+id/txtAddressOwner"
            android:singleLine="true"
            android:text="New Text" />

        <ImageButton
            android:id="@+id/editOrDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/morebutton" />

    </RelativeLayout>
</RelativeLayout>